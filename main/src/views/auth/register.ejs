<%- include ('../partials/header.ejs') %>

<div class="page-container">
    <div class="auth-header">
        <h1>Inscription</h1>
    </div>
    <div class="auth-body">

        <form action="/register" method="POST" class="auth-form">

            <div class="auth-form-grid">

                <div class="form-group">
                    <label for="firstname">Prénom</label>
                    <input type="text" id="firstname" name="firstname" required>
                </div>
    
                <div class="form-group">
                    <label for="lastname">Nom</label>
                    <input type="text" id="lastname" name="lastname" required>
                </div>

                <div class="form-group item-2fr">
                    <label for="address">Adresse</label>
                    <input class="large-input" type="text" id="address" name="address" required>
                </div>

                <div class="form-group">
                    <label for="zipcode">Code postal</label>
                    <input type="text" id="zipcode" name="zipcode" required>
                </div>
    
                <div class="form-group">
                    <label for="city">Ville</label>
                    <input type="text" id="city" name="city" required>
                </div>

                <div class="form-group">
                    <label for="phone">Téléphone</label>
                    <input type="text" id="phone" name="phone" required>
                </div>
    
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" required>
                </div>

                <div class="form-group">
                    <label for="password">Mot de passe</label>
                    <input type="text" id="password" name="password" required>
                </div>
    
                <div class="form-group">
                    <label for="admin">Rôle</label>
                    <select id="admin" name="admin" required>
                        <option value="true">Administrateur</option>
                        <option value="false" selected>Utilisateur</option>
                    </select>
                </div>

            </div>
            
            <div class="auth-form-footer">
                <div class="required-fields">Les champs sont obligatoires</div>
                <button class="register-btn" type="submit">S'inscrire</button>
            </div>
            
        </form>

        <div class="auth-footer">
            <p>Déjà un compte ? <a href="/login">Se connecter</a></p>
        </div>
    </div>
</div>

<%- include ('../partials/footer.ejs') %>