<%- include ('partials/header.ejs') %>

<div class="page-container">
    <h1>Liste des trajets</h1>
    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Conducteur</th>
                    <th>Départ</th>
                    <th>Arrivée</th>
                    <th>Date</th>
                    <th>Nombre de sièges disponibles</th>
                    <th>Baggages acceptés</th>
                    <th>Prix par siège</th>
                    <th>Statut</th>
                </tr>
            </thead>
            <tbody>
                <% modifiedTrips.forEach(trip => { %>
                    <tr>
                        <td><%= trip.driver %></td>
                        <td><%= trip.departure_city %></td>
                        <td><%= trip.destination_city %></td>
                        <td><%= trip.date_time %></td>
                        <td><%= trip.seats_available %></td>
                        <td><%= trip.luggage_accepted %></td>
                        <td><%= trip.price_per_seat %> €</td>
                        <td><%= trip.trip_status %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<%- include ('partials/footer.ejs') %>